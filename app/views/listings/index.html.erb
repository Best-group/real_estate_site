<div class="page-header">
  <h1>Search Results</h1>
</div>
<div class="row">
  <div class="large-8 small-8 columns">
    <%= form_tag search_searches_path, :method => :get do %>
        <p>
          <%= text_field_tag :query, params[:query] %> <%= submit_tag "Search!", class: "button" %>
        </p>
    <% end %>
  </div>

</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>City</th>
  </tr>
  </thead>
  <tbody>
  <% @listings.each do |p| %>
      <tr>
        <td>
          <%= p.title %>
        </td>
        <td>
          <%= p.description %>
        </td>
        <td>
          <%= p.price %>
        </td>
        <td>
          <%= p.suburbID %>
        </td>
        <td>
          <%= link_to "Edit listing", :controller => :listings, :action => "edit", :id => p.id %>
        </td>
        <td>
          <% if false %>
            <%= link_to "Delete", :controller => :listings, :action => 'destroy', :id => p.id %>
            <%= button_to "Delete", :controller => :listings, :method=>:delete, :class=>:destroy %>
          <% end %>

          <%= button_to 'Delete', {action: :destroy, id: p.id},  onclick: 'return confirm("Are you sure?")', method: :delete %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>