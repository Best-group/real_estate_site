    <table class="table table-striped">
      <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Suburb</th>
      </tr>
      </thead>
      <tbody>
      <% @listings.each do |p| %>
          <tr>
            <td>
              <%= p.title %>
            </td>
            <td>
              <%= p.description %>
            </td>
            <td>
              <%= p.price %>
            </td>
            <td>
              <%= p.suburbID %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
